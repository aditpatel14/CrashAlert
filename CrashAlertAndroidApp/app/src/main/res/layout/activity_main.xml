<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.a3a04.CrashAlert.MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volume Amplitude Levels:" />

    <TextView
        android:id="@+id/volumeLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Volume Level: n/a"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/volumeBars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/status2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Showing Acceleration Levels:" />

    <com.jjoe64.graphview.GraphView
        android:layout_width="368dp"
        android:layout_height="200dp"
        android:id="@+id/graph"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/status3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Showing Heart Rate:" />

</LinearLayout>
